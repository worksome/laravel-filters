{
    "name": "worksome/laravel-filters",
    "description": "Laravel Filters",
    "keywords": [
        "worksome",
        "laravel",
        "laravel-filters"
    ],
    "homepage": "https://github.com/worksome/laravel-filters",
    "license": "MIT",
    "authors": [
        {
            "name": "Owen Voke",
            "email": "owen.voke@worksome.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^9.0 || ^10.0",
        "illuminate/database": "^9.0 || ^10.0",
        "spatie/laravel-package-tools": "^1.14.1",
        "tucker-eric/eloquentfilter": "^3.2"
    },
    "require-dev": {
        "ext-pdo": "*",
        "nunomaduro/collision": "^6.4",
        "nunomaduro/larastan": "^2.4.0",
        "orchestra/testbench": "^7.22 || ^8.0",
        "pestphp/pest": "^1.22.5",
        "pestphp/pest-plugin-laravel": "^1.4",
        "pestphp/pest-plugin-parallel": "^1.2",
        "worksome/coding-style": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\Filters\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\Filters\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "lint": "vendor/bin/ecs --fix",
        "test:unit": "vendor/bin/pest -p",
        "test:coverage": "vendor/bin/pest -p --coverage",
        "test:types": "vendor/bin/phpstan analyse",
        "test:style": "vendor/bin/ecs",
        "test": [
            "@test:style",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "worksome/coding-style": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
